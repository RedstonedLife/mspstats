extends layout
block content
    span(style='font-size: 40px;') #{__("Welcome")}
    br
    span(style='font-size: 15px; color: #cacaca;') #{__("EnterUsername")}
    br
    br
    include ad
    br
    div(style='min-width:250px;width:70%; text-align: left;')
        label(for="username") #{__("Username")}:
        .input-group.mb-3
            input#name.form-control(type="text",aria-describedby="search", style="height: 50px;")
            .input-group-append
                select#region
                    - var regions = ["US", "UK", "CA", "AU", "NZ", "DE", "DK", "FR", "PL", "NL", "SE", "NO", "FI", "TR", "IE", "ES"]
                    each region in regions
                        option(value=region)=region
            .input-group-append
                button#search.btn.btn-primary(type="button") #{__("Search")}
    br
    include ad
block specialJS
    script(src="/js/main.js", type="text/javascript")
    script.
        if(#{doSwal}) {
            swal({
                title: 'Not Found',
                text: "This user could not be found.",
                type: 'error',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'OK',
                focusConfirm: false,
                allowOutsideClick: true
            });
        }